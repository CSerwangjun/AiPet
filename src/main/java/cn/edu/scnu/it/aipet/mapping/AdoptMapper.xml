<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.edu.scnu.it.aipet.dao.AdoptMapper">

<insert id="insertAdopt" useGeneratedKeys="true" keyProperty="idadopt">
insert into adopt(idadopt,iduser,adoptDes,adoptSpecies,placeInTitle,touchName,telNumber,petSex,datetime)
 values (0,#{iduser},#{adoptDes},#{adoptSpecies},#{placeInTitle},#{touchName},#{telNumber},#{petSex},#{datetime})
</insert>
 <select id="getAdoptByUserId" parameterType="Long" >
    select idadopt,iduser,adoptDes,adoptSpecies,placeinTitle,touchName,telNumber,petSex,datetime from placeout where iduser=#{iduser}
</select>

</mapper>