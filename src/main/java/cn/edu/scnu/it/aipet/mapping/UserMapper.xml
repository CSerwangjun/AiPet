<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.edu.scnu.it.aipet.dao.UserMapper">
    <resultMap id="user" type="cn.edu.scnu.it.aipet.pojo.User">
        <id column="idusers" property="idusers"/>
        <collection property="placeouts" column="iduser" select="cn.edu.scnu.it.aipet.dao.PlaceoutMapper.getPlaceoutByUserId"/>
        <collection property="adopts" column="iduser" select="cn.edu.scnu.it.aipet.dao.AdoptMapper.getAdoptByUserId"/>
    </resultMap>
   <insert id="insertUser" useGeneratedKeys="true" keyProperty="idusers">
       insert into users(idusers,name,realname,sex,password,number,email,address) values(0,#{name},
      #{realname},#{sex},#{password},#{number},#{email},#{address})
   </insert>

    <delete id="deleteUser" parameterType="long">
        delete from users where id=#{id}
    </delete>
    <select id="selectUserByEmail" parameterType="string" resultMap="user">
        select idusers,name,email,password from users where email=#{email}
    </select>
</mapper>